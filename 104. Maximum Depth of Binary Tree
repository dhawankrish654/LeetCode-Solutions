# Definition for a binary tree node.
# class TreeNode(object):
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution(object):
    def maxDepth(self, root):
        """
        :type root: TreeNode
        :rtype: int
        """
        
        if root is not None:
            Ldepth = self.maxDepth(root.left)
            Rdepth = self.maxDepth(root.right)
            
            return max(Ldepth, Rdepth) + 1
        return 5
